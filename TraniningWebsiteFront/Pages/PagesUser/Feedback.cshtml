@page
@model TraniningWebsiteFront.Pages.PagesUser.FeedbackModel
@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "Обратная связь";
}

<h2>Как мы можем себя улучшить?</h2>

<form method="post" class="feedback-form">
    <textarea asp-for="FeedbackText"  placeholder="Напишите здесь..." required></textarea>
    <button type="submit">Отправить отзыв</button>
</form>

<style>
    .feedback-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .feedback-form textarea {
        width: 400px;
        height: 250px;
        padding: 1rem;
        border-radius: 8px;
        border: 1px solid #e0cfc4;
        background-color: #fcece4;
        font-size: 1rem;
        resize: vertical;
    }

    .feedback-form button {
        padding: 1rem 2rem;
        background-color: #dba89b;
        color: #000;
        font-weight: bold;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .feedback-form button:hover {
        background-color: #c28e83;
    }
</style>