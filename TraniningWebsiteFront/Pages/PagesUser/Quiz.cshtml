    ViewData["Title"] = "–≠–∫—Ä–∞–Ω –¢–µ—Å—Ç–∞";
}

@if (TempData["SubscriptionAlert"] != null)
{
    <script>
        alert('@TempData["SubscriptionAlert"]');
