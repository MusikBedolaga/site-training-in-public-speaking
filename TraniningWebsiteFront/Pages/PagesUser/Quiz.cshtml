</form>


<style>
    .container-quiz {
        padding: 2rem;
        background-color: #ffeada;
        font-family: sans-serif;
        min-height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .quiz-title {
        text-align: center;
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
    }

    .quiz-question {
        background-color: #eac5b4;
        padding: 1.5rem;
        border-radius: 8px;
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        color: #333;
        margin-bottom: 2rem;
        text-align: center;
    }

    .quiz-buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* üîÅ –ï–¥–∏–Ω—ã–π —Å—Ç–∏–ª—å –∫–Ω–æ–ø–æ–∫ */
    .btn-page {
        padding: 0.8rem 2rem;
        background-color: #d18c7f;
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        text-align: center;
    }

    .btn-page:disabled {
        background-color: #ccc;
        cursor: not-allowed;
    }

    .quiz-answer {
        margin-top: 1rem;
        margin-bottom: 2rem;
        display: flex;
        flex-direction: column;
    }

    .answer-label {
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .answer-input {
        padding: 1rem;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 1rem;
        resize: vertical;
        background-color: #fff7f2;
        color: #333;
    }

    .quiz-result {
        text-align: center;
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
    }

    .result-correct {
        color: green;
        font-weight: bold;
    }

    .result-incorrect {
        color: red;
        font-weight: bold;
    }

    .quiz-result {
        margin-top: 1rem;
        font-weight: bold;
        padding: 1rem;
        border-radius: 8px;
        text-align: center;
    }

    .correct {
        background-color: #d4edda;
        color: #155724;
    }

    .incorrect {
        background-color: #f8d7da;
        color: #721c24;
    }

</style>
